<div class="container-fluid header header-show">
    <div class="container d-flex flex-column align-items-center"> 
        <div class="row px-4 mb-1">
        <h5> @garden.name</h5>
        </div>

        <div class="header-icon"> 
        <%= image_tag ('illus-tool-3.svg'), class:"header-icon-image" %>
        </div> <!-- header-icon-->
    </div>  
</div>


<div class="container mt-4 pt-5">

  <%= @garden.squares.count %>
  <% @squares.each do |square|  %>
    <%= square.plant.name %>
    <% if File.file? "#{Rails.root}/app/assets/images/#{square.plant.image}.jpg" %>
      <%= image_tag ("#{square.plant.image}.jpg") %>
    <% elsif File.file? "#{Rails.root}/app/assets/images/#{square.plant.image}.png" %>
      <%= image_tag ("#{square.plant.image}.png") %>
    <% end %>
    <p>boutton pour supprimer lien vers Square new</p>
    <%= link_to "X", new_garden_square_path(@garden.id) %>
  <% end %>
  <%= link_to "Valider", new_garden_square_path(@garden.id) %>
  <%= link_to "Valider vers Index Garden", gardens_path  %>

  <p> cuadritos largeur : <%=@garden.width_in_squares  %></p>
  <p> cuadritos longueur : <%=@garden.length_in_squares  %></p>

  <div class="container overflow-auto d-flex flex-column">
    <% @garden.width_in_squares.times do %> 

      <div class="d-flex flex-rows"> 
        <%@garden.length_in_squares.times do%>
          <div class="square mx-1 my-1"> 
            x
          </div>
        <% end %>
      </div> <!-- @end d-flex flx-rows-->


    <% end %>


  </div> <!-- @end container body-->





  <%# Lien pour éditer %>
</div>

